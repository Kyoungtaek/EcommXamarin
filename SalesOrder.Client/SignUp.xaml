<Window x:Class="SalesOrder.Client.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesOrder.Client"
        mc:Ignorable="d"
        Title="SignUp" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="50" Margin="213,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="50" Margin="213,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355"/>
        <Button x:Name="btnContinue" Content="Continue" HorizontalAlignment="Left" Margin="213,308,0,0" VerticalAlignment="Top" Width="173" Height="55" Click="btnContinue_Click"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="50" Margin="213,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355"/>
        <TextBox x:Name="txtConfirm" HorizontalAlignment="Left" Height="50" Margin="213,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="355"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="395,308,0,0" VerticalAlignment="Top" Width="173" Height="55"/>

    </Grid>

</Window>
